{{#if addNewVideo}}
<h1>New Video</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="username">Username</label>
        {{input value=username id="username"}}
      </div>
      <div class="form-group">
        <label for="videodescription">Video Description</label>
        {{input value=videodescription id="videodescription"}}
      </div>
      <div class="form-group">
        <label for="videourl">Video</label>
        {{input value=videourl id="videourl"}}
      </div>
      <!-- <div class="form-group">
        <label for="rating">Rating</label>
        {{input value=rating id="rating"}}
      </div> -->
      <div class="form-group">
        <label for="comment">Comment</label>
        {{input value=comment id="comment"}}
      </div>
      <button class="btn btn-primary" {{action 'saveVideo'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'videoFormShow'}}>
    <i class="fa fa-plus" aria-hidden="true"></i> New Video</button>
{{/if}}
