{{#if addNewReview}}
  <div class="new-add-review">
    <h1>New Review</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="rating">Rating</label>
          {{input value=rating class="form-control" id="rating"}}
        </div>

        <div class="form-group">
          <label for="comment">Comment</label>
          {{input value=comment class="form-control" id="comment"}}
        </div>

        <button class="btn btn-info" {{action 'saveReview'}}>Save</button>
        <button class="btn btn-danger float-right" {{action 'cancelReview'}}>Cancel</button>
      </form>
    </div>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'reviewFormShow'}}>New Review</button>
{{/if}}
