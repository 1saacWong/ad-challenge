<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h2>Video challenge submitted by {{model.username}}</h2>
      <h4>Description: {{model.videodescription}}</h4>
      <video width="100%" height="400" controls>
        <source src={{model.videourl}}>
      </video>



      <h3>Ratings and Comments</h3>
      <div class="ratingsComments">
      {{#each model.reviews as |review|}}
        <div class="panel panel-primary">
          <div class="panel-heading">Ratings from {{model.username}}</div>
          <div class="panel-body">
            Rating: {{review.rating}}<br> Comment: {{review.comment}}<br>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="col-xs-4">
    <p class="saveReviewButton">{{new-review saveReview="saveReview" video=model}}</p>
  </div>
  </div>
  <!-- End of Row -->
</div>
<!-- End of container-->
